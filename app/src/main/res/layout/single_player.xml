<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/player_Card"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentPadding="7dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#FFFFFF">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/icon_bat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_baseline_sports_cricket_24"
                app:tint="#2A7E2E"
                />

            <TextView
                android:id="@+id/PlayerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="player Name"
                android:layout_toEndOf="@id/icon_bat"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#454662"
                />


            <ImageView
                android:id="@+id/edit_details"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_mode_edit_24"
                android:textColor="#454662"
                android:layout_marginEnd="60dp"
                app:tint="#2A7E2E"
                android:layout_alignParentEnd="true"
                />

            <ImageView
                android:id="@+id/delete_details"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_delete_24"
                android:textColor="#454662"
                android:layout_marginEnd="30dp"
                app:tint="#FF3B2D"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>