<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/wellcome_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="#fff"
        android:background="#2A7E2E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Add Player Details"
        />


    <TextView
        android:id="@+id/vendName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill these details!"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:textStyle="bold"
        />

    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/txt_playerName"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:hint="Player Name*"
        />


    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/txt_batStyle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:hint="Batting Style (if any)"
        />

    <EditText
        android:layout_marginStart="30dp"
        android:id="@+id/txt_BalStyle"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:hint="Bowling Style (if any)"
        />


    <Button
        android:id="@+id/fb_check"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/round_button_background"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:padding="12dp"
        android:drawableTop="@drawable/ic_baseline_check_24"
        android:drawablePadding="2dp"
        android:contentDescription="Round Icon Button" />



