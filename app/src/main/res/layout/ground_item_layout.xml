<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_Card"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#F6F5F5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            >
            <TextView
                android:id="@+id/lbl_Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:layout_marginLeft="30dp"
                android:visibility="invisible"
                android:text="Code"
                android:textSize="5dp" />

            <TextView
                android:id="@+id/imgText"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/small_circle_color_filled"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="B" />

            <TextView
                android:id="@+id/grndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="40dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgText"
                android:text="Pak Korangi"
                android:textColor="#454662"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/grndText"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="50dp"
                android:layout_toRightOf="@id/imgText"
                android:maxLines="2"
                android:text="Eid Gah ground Korangi 4 Zaman Town"
                android:textColor="#B3B3B3"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="33dp"
                app:tint="#2A7E2E"
                android:src="@drawable/ic_baseline_mode_edit_24" />
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                app:tint="#FF3B2D"
                android:src="@drawable/ic_baseline_delete_24" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>